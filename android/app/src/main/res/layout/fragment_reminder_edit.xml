<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Melding"
        android:id="@+id/messageTextView"
        style="?android:attr/listSeparatorTextViewStyle" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/messageEditText"
        android:layout_below="@+id/messageTextView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frequentie"
        android:id="@+id/frequencyTextView"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_below="@+id/messageEditText" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:id="@+id/frequencyLayout"
        android:layout_below="@+id/frequencyTextView" >

        <EditText
            android:layout_width="77dp"
            android:layout_height="fill_parent"
            android:inputType="numberDecimal"
            android:ems="10"
            android:gravity="right|center_vertical"
            android:id="@+id/frequencyEditText"
            android:layout_below="@+id/frequencyTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="keer per"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView"
            android:gravity="center"
            android:layout_below="@+id/frequencyTextView"
            android:layout_toRightOf="@+id/frequencyEditText"
            android:layout_alignBottom="@+id/frequencyEditText" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/spinner"
            android:layout_below="@+id/frequencyTextView"
            android:layout_toRightOf="@+id/textView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:id="@+id/frequencyNumberPad"
        android:layout_below="@id/frequencyLayout" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:id="@+id/frequencyNumberPadRow1" >

            <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/button1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1" />

            <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/button2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1" />

            <Button
                android:text="3"
                android:background="@android:color/holo_purple"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1" />

            <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1" />

            <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button5"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:id="@+id/frequencyNumberPadRow2" >

            <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/button6"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1" />

            <Button
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/button7"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1" />

            <Button
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/button8"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1" />

            <Button
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/button9"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1" />

            <Button
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/button10"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:text="keer per"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/timesPerText"
        android:gravity="center"
        android:layout_below="@+id/frequencyNumberPad" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:id="@+id/frequencyPeriodPad"
        android:layout_below="@+id/timesPerText" >

        <Button
            android:text="Uur"
            android:textSize="16dp"
            android:background="@drawable/selector_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/buttonHour"
            android:layout_weight="1" />

        <Button
            android:text="Dag"
            android:textSize="16dp"
            android:background="@drawable/selector_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="-2dp"
            android:id="@+id/buttonDay"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1" />

        <Button
            android:text="Week"
            android:textSize="16dp"
            android:background="@drawable/button_unselected"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="-2dp"
            android:id="@+id/buttonWeek"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1" />

        <Button
            android:text="Maand"
            android:textSize="16dp"
            android:background="@drawable/selector_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="-2dp"
            android:id="@+id/buttonMonth"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>
