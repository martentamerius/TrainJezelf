<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Melding"
        android:id="@+id/messageTextView"
        style="?android:attr/listSeparatorTextViewStyle" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/messageEditText"
        android:layout_below="@+id/messageTextView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frequentie"
        android:id="@+id/frequencyTextView"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_below="@+id/messageEditText" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/frequencyTextView" >

        <EditText
            android:layout_width="77dp"
            android:layout_height="fill_parent"
            android:inputType="numberDecimal"
            android:ems="10"
            android:gravity="right|center_vertical"
            android:id="@+id/frequencyEditText"
            android:layout_below="@+id/frequencyTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="keer per"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView"
            android:gravity="center"
            android:layout_below="@+id/frequencyTextView"
            android:layout_toRightOf="@+id/frequencyEditText"
            android:layout_alignBottom="@+id/frequencyEditText" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/spinner"
            android:layout_below="@+id/frequencyTextView"
            android:layout_toRightOf="@+id/textView" />
    </LinearLayout>

</RelativeLayout>
