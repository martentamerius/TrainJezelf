<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ronald.trainjezelf.ReminderShowFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/reminderShowImageView"
        android:background="@drawable/nature_spring"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:contentDescription="@string/background_photo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:id="@+id/reminderShowText"
        android:layout_gravity="center|bottom"
        android:padding="32dp"
        android:text="@string/lorem_ipsum"
        android:typeface="serif"
        android:textStyle="italic"
        android:clickable="false"
        android:gravity="bottom"
        android:textSize="16sp"
        style="@style/ReminderShowText" />

</FrameLayout>
